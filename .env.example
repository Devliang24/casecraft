# CaseCraft Configuration
# Copy this file to .env and update with your values

# LLM Configuration
CASECRAFT_LLM_MODEL=glm-4.5-x
CASECRAFT_LLM_API_KEY=<YOUR_API_KEY_HERE>
CASECRAFT_LLM_BASE_URL=https://open.bigmodel.cn/api/paas/v4
CASECRAFT_LLM_TIMEOUT=60
CASECRAFT_LLM_MAX_RETRIES=3
CASECRAFT_LLM_TEMPERATURE=0.7
CASECRAFT_LLM_THINK=false           # Enable thinking process output (useful for debugging)
CASECRAFT_LLM_STREAM=false          # Enable streaming response (improves user experience)

# Alternative: Use BigModel-specific environment variable
# BIGMODEL_API_KEY=<YOUR_API_KEY_HERE>

# Output Configuration
CASECRAFT_OUTPUT_DIRECTORY=test_cases
CASECRAFT_OUTPUT_ORGANIZE_BY_TAG=false
CASECRAFT_OUTPUT_FILENAME_TEMPLATE={method}_{path_slug}.json

# Processing Configuration
CASECRAFT_PROCESSING_WORKERS=1
# CASECRAFT_PROCESSING_INCLUDE_TAGS=tag1,tag2
# CASECRAFT_PROCESSING_EXCLUDE_TAGS=tag3,tag4
# CASECRAFT_PROCESSING_INCLUDE_PATHS=/api/v1/*
# CASECRAFT_PROCESSING_EXCLUDE_PATHS=/internal/*
CASECRAFT_PROCESSING_FORCE_REGENERATE=false
CASECRAFT_PROCESSING_DRY_RUN=false