# CaseCraft Configuration Example
# Copy this file to .env and configure your settings

# ====================
# Provider API Keys (Required)
# ====================
CASECRAFT_GLM_API_KEY=your-glm-api-key-here
CASECRAFT_GLM_MODEL=glm-4.5-x

CASECRAFT_QWEN_API_KEY=your-qwen-api-key-here
CASECRAFT_QWEN_MODEL=qwen-flash


CASECRAFT_DEEPSEEK_API_KEY=your-deepseek-api-key-here
CASECRAFT_DEEPSEEK_MODEL=deepseek-chat

# ====================
# Provider Base URLs (Optional - will use defaults if not set)
# ====================
CASECRAFT_GLM_BASE_URL=https://open.bigmodel.cn/api/paas/v4
CASECRAFT_QWEN_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
CASECRAFT_DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# ====================
# Provider Concurrency Limits (Optional)
# ====================
CASECRAFT_GLM_MAX_WORKERS=1
CASECRAFT_QWEN_MAX_WORKERS=3
CASECRAFT_DEEPSEEK_MAX_WORKERS=3

# ====================
# Provider Retry Configuration (Optional)
# ====================
# GLM retry settings
CASECRAFT_GLM_RETRY_BASE_WAIT=2.0
CASECRAFT_GLM_RETRY_MAX_WAIT=60
CASECRAFT_GLM_RETRY_MULTIPLIER=2

# Qwen retry settings
CASECRAFT_QWEN_RETRY_BASE_WAIT=1.0
CASECRAFT_QWEN_RETRY_MAX_WAIT=30
CASECRAFT_QWEN_RETRY_MULTIPLIER=2


# ====================
# Local Provider Configuration (Optional)
# ====================
CASECRAFT_LOCAL_OLLAMA_PORT=11434
CASECRAFT_LOCAL_VLLM_PORT=8000
CASECRAFT_LOCAL_DEFAULT_PORT=8000

# ====================
# Global Default Parameters (Optional)
# ====================
CASECRAFT_DEFAULT_MAX_TOKENS=8192
CASECRAFT_DEFAULT_TEMPERATURE=0.7
CASECRAFT_DEFAULT_TOP_P=0.9
CASECRAFT_DEFAULT_TIMEOUT=120
CASECRAFT_DEFAULT_MAX_RETRIES=5

# API parsing and retry delays (Optional)
CASECRAFT_API_PARSE_TIMEOUT=30
CASECRAFT_ERROR_RETRY_DELAY=2.0
CASECRAFT_RETRY_BACKOFF_DELAY=5.0
CASECRAFT_PROVIDER_SWITCH_DELAY=5.0

# ====================
# Provider-Specific Overrides (Optional)
# ====================
# Override timeout for specific providers
CASECRAFT_GLM_TIMEOUT=120
CASECRAFT_QWEN_TIMEOUT=60

# Override temperature for specific providers
CASECRAFT_GLM_TEMPERATURE=0.7
CASECRAFT_QWEN_TEMPERATURE=0.8

# Enable/disable streaming for specific providers
CASECRAFT_GLM_STREAM=false
CASECRAFT_QWEN_STREAM=true

# ====================
# Processing Configuration (Optional)
# ====================
# Note: Workers must be specified via --workers CLI argument
CASECRAFT_PROCESSING_FORCE_REGENERATE=false
CASECRAFT_PROCESSING_DRY_RUN=false

# ====================
# Output Configuration (Optional)
# ====================
CASECRAFT_OUTPUT_DIRECTORY=test_cases
CASECRAFT_OUTPUT_ORGANIZE_BY_TAG=false
CASECRAFT_OUTPUT_FILENAME_TEMPLATE={method}_{path_slug}.json

# ====================
# Logging Configuration (Optional)
# ====================
CASECRAFT_LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR
CASECRAFT_LOG_ENABLED=false  # Enable automatic log file creation
CASECRAFT_LOG_DIR=logs  # Directory for log files
# CASECRAFT_LOG_FILE=/path/to/custom.log  # Specific log file path (overrides auto-generation)
CASECRAFT_LOG_MAX_SIZE=10485760  # Max log file size in bytes (default: 10MB)
CASECRAFT_LOG_BACKUP_COUNT=5  # Number of backup log files to keep

# ====================
# Legacy Support (Deprecated - for backward compatibility only)
# ====================
# BIGMODEL_API_KEY=your-legacy-api-key  # Use CASECRAFT_GLM_API_KEY instead
# CASECRAFT_LLM_API_KEY=your-api-key    # Use provider-specific keys instead
# CASECRAFT_LLM_MODEL=model-name        # Use provider-specific models instead