# CaseCraft Configuration Template
# Copy this file to .env and fill in your values
# Remember to add .env to your .gitignore file!

# BigModel LLM Configuration (Required)
# Get your API key from: https://open.bigmodel.cn/console/apikey
CASECRAFT_LLM_API_KEY=your-bigmodel-api-key-here

# Model Configuration (Optional - defaults shown)
CASECRAFT_LLM_MODEL=glm-4.5-x
CASECRAFT_LLM_BASE_URL=https://open.bigmodel.cn/api/paas/v4
CASECRAFT_LLM_TIMEOUT=60
CASECRAFT_LLM_MAX_RETRIES=3
CASECRAFT_LLM_TEMPERATURE=0.7

# LLM Behavior (Optional)
# CASECRAFT_LLM_THINK=true        # Enable thinking process output (useful for debugging)
# CASECRAFT_LLM_STREAM=true       # Enable streaming response (improves user experience)

# Output Configuration (Optional)
# CASECRAFT_OUTPUT_DIRECTORY=test_cases
# CASECRAFT_OUTPUT_ORGANIZE_BY_TAG=false
# CASECRAFT_OUTPUT_FILENAME_TEMPLATE={method}_{path_slug}.json

# Processing Configuration
CASECRAFT_PROCESSING_WORKERS=1   # BigModel only supports single concurrency

# Processing Filters (Optional)
# CASECRAFT_PROCESSING_INCLUDE_TAGS=users,products
# CASECRAFT_PROCESSING_EXCLUDE_TAGS=admin,internal
# CASECRAFT_PROCESSING_INCLUDE_PATHS=/api/v1/*
# CASECRAFT_PROCESSING_EXCLUDE_PATHS=/api/internal/*
# CASECRAFT_PROCESSING_FORCE_REGENERATE=false
# CASECRAFT_PROCESSING_DRY_RUN=false

# Alternative API Key Variable (also supported)
# BIGMODEL_API_KEY=your-bigmodel-api-key-here